            "problemMatcher": [
                "$gcc"
            ]
        },

        {
            "taskName": "ros2 launch",
            "type": "shell",
            "command": "source ~/ros2_rolling/install/local_setup.bash && source ./install/setup.bash && ros2 launch script_launch.py",
            
