                "$gcc"
            ]
        },


        {
            "taskName": "colcon build",
            "type": "shell",
            "command": "source ~/ros2_humble/install/local_setup.bash && colcon build --symlink-install",
            "problemMatcher": [
                "$gcc"
            ]
        },

        {
            "taskName": "run listener",
            "type": "shell",
            "command": "source ~/ros2_humble/install/local_setup.bash && ros2 run demo_nodes_py listener",
            
